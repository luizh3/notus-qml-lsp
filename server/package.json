{
  "name": "notus-qml",
  "version": "1.0.0",
  "description": "Cooming soon...",
  "main": "./src/server.js",
  "type": "commonjs",
  "scripts": {
    "copy:templates": "cpx \"tools/module-generator/templates/files/**/*\" build/tools/module-generator/templates/files",
    "build": "tsc && npm run copy:templates",
    "build:tools": "tsc -p tools/tsconfig.json",
    "start": "npm run build && node ./build/server.js",
    "test": "npm run build && node ./build/test-framework/TestCLI.js",
    "cli:generator": "npm run build:tools && node ./build/tools/module-generator/ModuleGeneratorCLI.js",
    "dev": "tsc --watch",
    "watch": "tsc -w"
  },
  "keywords": [
    "typescript",
    "plugin",
    "architecture",
    "context"
  ],
  "author": "Luiz H.S",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/module-alias": "^2.0.4",
    "commander": "^14.0.0",
    "cpx": "^1.5.0",
    "module-alias": "^2.2.3",
    "tsconfig-paths": "^4.2.0"
  },
  "_moduleAliases": {
    "@": "./build",
    "@core": "./build/core",
    "@test": "./build/test-framework"
  }
}