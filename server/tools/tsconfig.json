{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": ".",
        "outDir": "../build/tools",
        "rootDir": ".",
        "paths": {
            "@/module-generator/*": [
                "module-generator/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}